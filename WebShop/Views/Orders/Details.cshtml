@*@model WebShop.Models.Order*@

@model WebShop.ViewModels.OrderDetailsViewModel;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PersonName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.PersonName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.PhoneNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.OrderDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.OrderDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Id)
        </dd>
    </dl>
</div>
<div>
    <h2>Ordered items:</h2>
    @foreach(var item in Model.OrderItems){
        <div class="card m-3">
            <img class="card-img-top" src="~/@item.Product.Image" alt="Card image cap" style="height:80px; width:80px;">
            <div class="card-body">
                <h5 class="card-title">@item?.Product?.Name</h5>
                <p class="card-text">
                    Price: @item?.Product?.Price
                </p>

            </div></div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Order?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
